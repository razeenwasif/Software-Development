<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/textMainTitle"
        style="@style/TextAppearance.COMP2100.Display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_toolbar_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/heroCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_hero_card_light"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:id="@+id/heroTitle"
                style="@style/TextAppearance.COMP2100.Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:text="@string/main_hero_title" />

            <TextView
                android:id="@+id/heroSubtitle"
                style="@style/TextAppearance.COMP2100.TitleAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="@string/main_hero_subtitle" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/heroChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:nestedScrollingEnabled="false"
                    app:chipSpacingHorizontal="12dp"
                    app:chipSpacingVertical="8dp"
                    app:selectionRequired="false"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTrending"
                        style="@style/Widget.COMP2100.AssistChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="@string/main_chip_trending" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPatterns"
                        style="@style/Widget.COMP2100.AssistChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="@string/main_chip_patterns" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLive"
                        style="@style/Widget.COMP2100.AssistChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="@string/main_chip_live" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonExplore"
                style="@style/Widget.COMP2100.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/main_button_explore"
                app:icon="@drawable/ic_search_24"
                app:iconGravity="textStart"
                android:textColor="?attr/colorOnSurface"
                app:iconTint="?attr/colorPrimary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
