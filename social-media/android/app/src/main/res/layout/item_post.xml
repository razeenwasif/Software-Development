<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardElevation="8dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:paddingStart="20dp"
        android:paddingTop="22dp"
        android:paddingEnd="20dp"
        android:paddingBottom="22dp">

        <FrameLayout
            android:id="@+id/postAvatarContainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_avatar_gradient"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewAvatarInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="A" />
        </FrameLayout>

        <ImageView
            android:id="@+id/postTrailingIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_card_icon"
            android:contentDescription="@string/main_button_explore"
            android:padding="10dp"
            app:tint="?attr/colorPrimary"
            android:src="@drawable/ic_arrow_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPostTopic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/postTrailingIcon"
            app:layout_constraintStart_toEndOf="@id/postAvatarContainer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Exploring AVL Trees" />

        <TextView
            android:id="@+id/textViewResponseCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toStartOf="@id/postTrailingIcon"
            app:layout_constraintStart_toStartOf="@id/textViewPostTopic"
            app:layout_constraintTop_toBottomOf="@id/textViewPostTopic"
            tools:text="6 contributions â€¢ Fresh insights" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewPostTopic"
            app:layout_constraintTop_toBottomOf="@id/textViewResponseCount"
            app:layout_constraintEnd_toStartOf="@id/postTrailingIcon">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAuthor"
                    style="@style/Widget.COMP2100.AssistChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    tools:text="alexandra42" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTag"
                    style="@style/Widget.COMP2100.AssistChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    tools:text="design patterns" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
